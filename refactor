        "    <deployments>\n",
        "        <deployment name=\"ojdbc8.jar\" runtime-name=\"ojdbc8.jar\">\n",
        "            <content sha1=\"4acaa9ab2b7470fa80f0a8ec416d7ea86608ac8c\"/>\n",
        "        </deployment>\n",
        "        <deployment name=\"sigef.war\" runtime-name=\"sigef.war\">\n",
